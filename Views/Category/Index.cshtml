@model IEnumerable<string>

@{
    ViewData["Title"] = "Категории товаров";
}

<style>
.text-prim {
    color:#456830;
}
</style>

<div class="container mt-4">
    <h2 class="text-center mb-4">Категории товаров</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-star text-prim display-4 mb-3"></i>
                    <h5 class="card-title">Стандартные</h5>
                    <a href="/Category/Products?category=Стандартные" class="btn btn-category">Перейти к товарам</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-cloud text-prim display-4 mb-3"></i>
                    <h5 class="card-title">Муссовые</h5>
                    <a href="/Category/Products?category=Муссовые" class="btn btn-category">Перейти к товарам</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-leaf text-prim display-4 mb-3"></i>
                    <h5 class="card-title">Для веганов</h5>
                    <a href="/Category/Products?category=Для веганов" class="btn btn-category">Перейти к товарам</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-child text-prim display-4 mb-3"></i>
                    <h5 class="card-title">Для детей</h5>
                    <a href="/Category/Products?category=Для детей" class="btn btn-category">Перейти к товарам</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    h4 {
        color: #334E26; 
    }
    h5 {
        color: #334E26; 
    }
    h2 {
    padding-top: 2rem;
    color: #334E26; 
}
.card {
    transition: transform 0.3s ease;
    border: none;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.display-4 {
    font-size: 2.5rem;
}

.card-body {
    padding: 2rem;
}

.btn-category {
    background-color: #7A9C57;
    color:#E8F0D5;
    border-color: #7A9C57;
}

.btn-category:hover {
    background-color:#E8F0D5;
    color: #7A9C57;
    border-color: #7A9C57;
}

.btn-category:focus-visible {
    background-color:#E8F0D5;
    color: #7A9C57;
    border-color: #334E26;
}

h1 {
    color: #334E26;
    font-size: 2.5rem;
}
</style> 